<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<!-- standard out -->
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{ISO8601} %5p [%t] [%F:%L] - %m%n</pattern>
		</encoder>
		<target>System.out</target>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>INFO</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
	</appender>
	<!-- standard error -->
	<appender name="stderr" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{ISO8601} %5p [%t] [%F:%L] - %m%n</pattern>
		</encoder>
		<target>System.err</target>
		<!-- <filter class="ch.qos.logback.classic.filter.LevelFilter"> <level>ERROR</level> 
			<onMatch>ACCEPT</onMatch> <onMismatch>DENY</onMismatch> </filter> -->
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>WARN</level>
		</filter>
	</appender>
	<!-- context -->
	<appender name="context"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/merchant-tools.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>merchant-tools.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>5</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{ISO8601} %5p [%t] [%F:%L] - %m%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
	</appender>
	<!-- error -->
	<appender name="error"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/error.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>error.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>5</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{ISO8601} %5p [%t] [%F:%L] - %m%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
	</appender>
	<!-- smtp error <appender name="smtp.error" class="ch.qos.logback.classic.net.SMTPAppender"> 
		<smtpHost>localhost</smtpHost> <smtpPort>25</smtpPort> <to>${logback.smtp.error.to}</to> 
		<from>info-paas@mail.rakuten.com</from> <subject>${logback.smtp.error.subject}</subject> 
		<charsetEncoding>UTF-8</charsetEncoding> <layout class="ch.qos.logback.classic.PatternLayout"> 
		<pattern>%d{ISO8601} %5p [%t] [%F:%L] [%-4t] - %m%n</pattern> </layout> <filter 
		class="ch.qos.logback.classic.filter.LevelFilter"> <level>ERROR</level> <onMatch>ACCEPT</onMatch> 
		<onMismatch>DENY</onMismatch> </filter> </appender> -->

	<logger name="com.rakuten.gep.merchant.tools" level="INFO">
		<appender-ref ref="stdout" />
		<appender-ref ref="context" />
	</logger>
	
	<root />
</configuration>


<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<turboFilter class="com.rakuten.gep.logger.filter.DynamicThresholdFilter"/>

    <!-- standard out -->
	<appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{ISO8601} %5p [%t] [%F:%L] - %m%n</pattern>
		</encoder>
		<target>System.out</target>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>INFO</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
	</appender>
	<!-- standard error -->
	<appender name="stderr" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d{ISO8601} %5p [%t] [%F:%L] - %m%n</pattern>
		</encoder>
		<target>System.err</target>
		<!-- <filter class="ch.qos.logback.classic.filter.LevelFilter"> <level>ERROR</level> 
			<onMatch>ACCEPT</onMatch> <onMismatch>DENY</onMismatch> </filter> -->
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>WARN</level>
		</filter>
	</appender>

    <!-- context -->
	<appender name="context" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/context.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>context.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>5</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{ISO8601} %5p [%t] [%F:%L] - %m%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.ThresholdFilter">
			<level>INFO</level>
		</filter>
	</appender>
	
	<!-- context async -->
    <appender name="context.async" class="ch.qos.logback.classic.AsyncAppender" queueSize="12000">
        <appender-ref ref="context"/>
    </appender>
	
	<!-- error -->
	<appender name="error" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>logs/error.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>error.%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>5</maxHistory>
		</rollingPolicy>
		<encoder>
			<pattern>%d{ISO8601} %5p [%t] [%F:%L] - %m%n</pattern>
		</encoder>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
	</appender>


	<logger name="com.rakuten.ops.arp" level="debug">
		<appender-ref ref="context.async"/>
		<appender-ref ref="error" />		
	</logger>	
	<logger name="log.warn" level="WARN" additivity="false">
        <appender-ref ref="stderr" />
        <appender-ref ref="context" />
    </logger>
	<logger name="log.error" level="ERROR">
		<appender-ref ref="stderr" />
		<appender-ref ref="error" />
	</logger>

	<root/>

</configuration>